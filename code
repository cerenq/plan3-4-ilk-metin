<body>
  <h1>Aşk Şifresi - 1. Mektup</h1>

  <form id="quizForm">
    <div class="question">
      <p>1) Seni ilk öptüğüm yer hangi Marmaray durağına daha yakındı?</p>
      <div class="options">
        <label><input type="radio" name="q1" value="A"> A) Zıt Erenköy</label>
        <label><input type="radio" name="q1" value="B"> B) Bostancı</label>
        <label><input type="radio" name="q1" value="C"> C) Göztepe</label>
        <label><input type="radio" name="q1" value="D"> D) Suadiye</label>
      </div>
    </div>

    <div class="question">
      <p>2) Sana en çok yakıştığını düşündüğüm renk?</p>
      <div class="options">
        <label><input type="radio" name="q2" value="A"> A) Beyaz</label>
        <label><input type="radio" name="q2" value="B"> B) Kırmızı</label>
        <label><input type="radio" name="q2" value="C"> C) Mavi</label>
        <label><input type="radio" name="q2" value="D"> D) Yeşil</label>
      </div>
    </div>

    <button type="submit">Cevapları Kontrol Et</button>
  </form>

  <div id="result"></div>

<script>
  const form = document.getElementById('quizForm');
  const resultDiv = document.getElementById('result');

  form.addEventListener('submit', function(event) {
    event.preventDefault();

    const q1 = form.elements['q1'].value;
    const q2 = form.elements['q2'].value;

    if (!q1 || !q2) {
      resultDiv.textContent = 'Lütfen her iki soruyu da cevaplayın.';
      resultDiv.style.color = 'red';
      return;
    }

    if (q1 === 'B' && q2 === 'D') {
      resultDiv.style.color = '#198754'; // yeşil
      resultDiv.textContent = 'Tebrikler! Mektuba erişebilirsiniz.';

      setTimeout(() => {
        window.open('https://www.notion.so/Merhaba-bebe-im-22bb1c2000938003bb49c3ce7887dbbe?source=copy_link', '_blank');
      }, 1500);
    } else {
      resultDiv.style.color = 'red';
      resultDiv.textContent = 'Bir veya daha fazla cevap yanlış. Tekrar deneyin!';
    }
  });
</script>

